/* Pulsante Google Maps (posizionato sopra gli altri pulsanti) */
button.google-maps-button {
    margin-bottom: 15px;
}

/* Pulsante per il tema */
.theme-toggle {
    background: none;
    border: none;
    font-size: 30px;
    color: inherit;
    cursor: pointer;
    position: absolute;
    top: 20px;
    right: 20px;
    padding: 10px;
}

/* Navbar ottimizzata */
.navbar ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
    background-color: #f1f1f1;
    text-align: center;
    border-radius: 12px; /* Bordo arrotondato per navbar */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Ombra per un effetto leggero */
}
.navbar li {
    display: inline-block;
    margin-right: 10px;
}
.navbar li a {
    text-decoration: none;
    color: #007aff;
    font-size: 18px;
    padding: 12px 20px;
    border-radius: 10px;
    transition: background-color 0.3s ease;
}
.navbar li a:hover {
    background-color: #007aff;
    color: #ffffff;
}

/* Stili per le immagini */
.image-container img {
    max-width: 100%;
    height: auto;
    border-radius: 16px;
    margin-bottom: 15px;
}

/* Media queries per smartphone */
@media (max-width: 768px) {
    .container {
        width: 90%; /* Più spazio sui dispositivi mobili */
        padding: 15px;
    }

    button.main, button.start, button.back, button.google-maps-button {
        font-size: 18px;
        padding: 14px 20px;
        width: 100%; /* I pulsanti occupano tutta la larghezza disponibile */
    }

    /* Navbar per piccoli schermi */
    .navbar li {
        display: block;
        margin-bottom: 10px;
    }
}

/* Ottimizzazione per la visibilità delle sezioni */
.hidden {
    display: none;
}

/* Miglioramenti generali */
body, h1, h2, h3, p {
    margin: 0;
    padding: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
}

/* Piccole ottimizzazioni per la larghezza della finestra */
@media (max-width: 768px) {
    .container {
        padding: 10px;
    }
    button.main, button.start, button.back, button.google-maps-button {
        width: 48%; /* I pulsanti sono affiancati (non impilati) */
        font-size: 14px;
        padding: 10px;
    }
}
